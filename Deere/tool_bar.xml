<!DOCTYPE template>
<!--
  Description:
    The tool bar.
-->
<Template>
  <WidgetGroup>
    <ObjectName>ToolBar</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,f</SizePolicy>
    <Children>
      <PushButton>
        <Size>50f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>+LIBRARY</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>-LIBRARY</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Master],show_library</ConfigKey>
          <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
        </Connection>
      </PushButton>

      <PushButton>
        <Size>50f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>-MIXER</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>+MIXER</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Master],hide_mixer</ConfigKey>
        </Connection>
      </PushButton>

      <PushButton>
        <Size>50f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>+SAMPLERS</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>-SAMPLERS</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Samplers],show_samplers</ConfigKey>
        </Connection>
      </PushButton>

      <PushButton>
        <Size>50f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>+EFFECTS</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>-EFFECTS</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Effects],show_effects</ConfigKey>
        </Connection>
      </PushButton>

      <PushButton>
        <Size>60f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>+MICROPHONE</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>-MICROPHONE</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Microphone],show_microphone</ConfigKey>
        </Connection>
      </PushButton>

      <PushButton>
        <Size>50f,20f</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Text>2DECK</Text>
        </State>
        <State>
          <Number>1</Number>
          <Text>4DECK</Text>
        </State>
        <Connection>
          <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
          <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
        </Connection>
      </PushButton>

      <WidgetGroup>
        <ObjectName>HeadphoneControls</ObjectName>
        <SizePolicy>min,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <PushButton>
            <ObjectName>HeadphoneSplit</ObjectName>
            <Size>50f,20f</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Text>STEREO</Text>
            </State>
            <State>
              <Number>1</Number>
              <Text>MONO SPLIT</Text>
            </State>
            <Connection>
              <ConfigKey>[Master],headSplit</ConfigKey>
              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
            </Connection>
          </PushButton>

          <Template src="skin:knob.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">headMix</SetVariable>
            <SetVariable name="label">Head Mix</SetVariable>
          </Template>

          <Template src="skin:knob.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">headVolume</SetVariable>
            <SetVariable name="label">Head Vol</SetVariable>
          </Template>

        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MasterControls</ObjectName>
        <SizePolicy>min,min</SizePolicy>
        <Layout>horizontal</Layout>
        <Children>

          <Template src="skin:knob.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">balance</SetVariable>
            <SetVariable name="label">Balance</SetVariable>
          </Template>

          <Template src="skin:knob.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">volume</SetVariable>
            <SetVariable name="label">Volume</SetVariable>
          </Template>

        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MasterVumeter</ObjectName>
        <SizePolicy>min,min</SizePolicy>
        <Layout>vertical</Layout>
        <Children>
          <Template src="skin:vumeter.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">VuMeterL</SetVariable>
          </Template>
          <Template src="skin:vumeter.xml">
            <SetVariable name="group">[Master]</SetVariable>
            <SetVariable name="control">VuMeterR</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>

      <Time>
          <ObjectName>Time</ObjectName>
          <Size>60f,20f</Size>
          <TooltipId>time</TooltipId>
          <ShowSeconds>false</ShowSeconds>
          <ClockFormat>24</ClockFormat>
      </Time>

      <Battery>
      </Battery>

    </Children>
  </WidgetGroup>



</Template>
