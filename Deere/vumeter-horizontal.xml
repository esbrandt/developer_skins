<!DOCTYPE template>
<!--
  Description:
    A VU meter.
  Variables:
    group: The group for the controls.
    control: The control to connect to.
-->
<Template>
  <VuMeter>
    <MinimumSize>100,10</MinimumSize>
    <MaximumSize>200,20</MaximumSize>
    <PathVu>vumeter-horizontal.svg</PathVu>
    <Horizontal>true</Horizontal>
    <PeakHoldSize>5</PeakHoldSize>
    <PeakHoldTime>600</PeakHoldTime>
    <PeakFallTime>200</PeakFallTime>
    <PeakFallStep>2</PeakFallStep>
    <Connection>
      <ConfigKey><Variable name="group"/>,<Variable name="control"/></ConfigKey>
    </Connection>
  </VuMeter>
</Template>
